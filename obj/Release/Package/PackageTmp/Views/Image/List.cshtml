@model List<album>
<div class="album-content">
    @foreach (var item in Model)
    {
        <div class="album-content-item" onclick="GoPhotosList('@item.id')">
            <div style="position:relative">
                <img src="@item.img" />
                <p class="num-p" style="">@item.album_img.Count</p>
            </div>
            <p class="album-content-item-p">@item.title</p>
            <p class="album-content-item-p">@item.about</p>
            <p class="album-content-item-p">@(item.add_time.Value.ToString("yyyy-MM-dd"))</p>
        </div>
    }
</div>
<script type="text/javascript">
    var grid = new Minigrid({
        container: '.album-content',
        item: '.album-content-item',
        gutter: 20
    });
    grid.mount();
    window.addEventListener('resize', function () {
        var grid = new Minigrid({
            container: '.album-content',
            item: '.album-content-item',
            gutter: 20
        });
        grid.mount();
    });
    $(".album-content-item").find("img").css("transform", "scale(1)");
    $(".num-p").css("transform", "scale(1)");
</script>
